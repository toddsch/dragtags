<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dragtag_layout_padding">

    <ImageButton
        android:id="@+id/drag_item_imagebutton_primary"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/drag_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/dragtag_padding_text_end"
        android:layout_marginStart="@dimen/dragtag_padding_text_start"
        android:layout_toEndOf="@+id/drag_item_imagebutton_primary"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/drag_item_imagebutton_secondary"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/drag_item_textview"
        android:background="@color/transparent"
        android:visibility="gone" />

</RelativeLayout>